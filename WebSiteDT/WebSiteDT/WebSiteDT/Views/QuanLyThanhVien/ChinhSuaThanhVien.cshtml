@model WebSiteDT.Models.ThanhVien

@{
    ViewBag.Title = "ChinhSuaThanhVien";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 p-b-10">
            <div class="overview-wrap">
                <h4 class="title-1 text-uppercase">Chỉnh sửa thành viên</h4>
                <h4 class="">
