@model IEnumerable<WebSiteDT.Models.SanPham>

<div class="row">
    <!-- banner -->
    <div class="col-md-3 col-sm-6 col-xs-6">
        <div class="banner banner-2">
            <img src="~/Content/img/banner15.jpg" alt="">
            <div class="banner-caption">
                <h2 class="white-color">NEW<br>COLLECTION</h2>
                <button class="primary-btn">Shop Now</button>
            </div>
        </div>
    </div>
    <!-- /banner -->
    <!-- Product Single -->
    <div class="col-md-3 col-sm-6 col-xs-6">
        <div class="product product-single">
            <div class="product-thumb">
                <div class="product-label">
                    <span>New</span>
                    <span class="sale">-20%</span>
                </div>
                <h5 class="main-btn quick-view">
                    <i class="fa fa-search-plus"></i>
                    @*<a href="@Url.Action("XemChiTiet", "SanPham", new { id = Model.ElementAt(0).MaSP})"> Chi tiết </a>*@
                    <a href="@Url.RouteUrl("XemChiTiet", new {@id = Model.ElementAt(0).MaSP, @tensp = Model.ElementAt(0).TenSP })"> Chi tiết </a>
                </h5>
                <img src="@Url.Content("~/Content/HinhAnhSP/"+ Model.ElementAt(0).HinhAnh)" alt="">
            </div>
            <div class="product-body">
                <h3 class="product-price">@Model.ElementAt(0).DonGia.Value.ToString("#,##") VND <del class="product-old-price">@(Model.ElementAt(0).DonGia.Value + Model.ElementAt(0).DonGia.Value * 20 / 100) VND</del></h3>
                <div class="product-rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-o empty"></i>
                </div>
                <h2 class="product-name"><a href="#">@Model.ElementAt(0).TenSP</a></h2>
                <div class="product-btns">
                    <button class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
                    <button class="main-btn icon-btn"><i class="fa fa-exchange"></i></button>
                    @*<button class="primary-btn add-to-cart"><i class="fa fa-shopping-cart"></i> Giỏ hàng</button>*@
                    <a href="@Url.Action("ThemGioHang", "GioHang", new { @MaSP = Model.ElementAt(0).MaSP , @strURL = Request.Url.ToString()} )" class="primary-btn add-to-cart"><i class="fa fa-shopping-cart"></i> Thêm</a>
                </div>
            </div>
        </div>
    </div>
    <!-- /Product Single -->
