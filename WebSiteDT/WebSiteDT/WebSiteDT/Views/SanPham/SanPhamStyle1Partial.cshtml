@using WebSiteDT.Models
@model IEnumerable<SanPham>

<!-- row -->
<div class="row">
    <!-- section title -->
    <div class="col-md-12">
        <div class="section-title">
            @*<h2 class="title">@Model.First().LoaiSanPham.TenLoai mới nhất</h2>*@
            <h2 class=" primary-color" style="font-weight: bold">ĐIỆN THOẠI MỚI NHẤT</h2>
        </div>
    </div>
    <!-- section title -->

    <!-- Product Single -->
    @foreach (var item in Model.Take(4))
    {
        <div class="col-md-3 col-sm-6 col-xs-6">
            <div class="product product-single">
                <div class="product-thumb">
                    <div class="product-label" style="background-color:#F8694A;">
                        <span>New</span>
                    </div>
                    <h5 class="main-btn quick-view">
                        <i class="fa fa-search-plus "></i>
                        @*<a href="@Url.Action("XemChiTiet", "SanPham", new { id = item.MaSP})"> Chi tiết </a>*@
                        <a href="@Url.RouteUrl("XemChiTiet", new {@id = item.MaSP, @tensp = item.TenSP })"> Chi tiết </a>
                    </h5>
                    <img src="@Url.Content("~/Content/HinhAnhSP/" + item.HinhAnh)" alt="">
                </div>
                <div class="product-body">
                    <h3 class="product-price">@item.DonGia.Value.ToString("#,##")</h3>
                    <div class="product-rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-o empty"></i>
                    </div>
                    <h2 class="product-name"><a href="#">@item.TenSP</a></h2>
                    <div class="product-btns">
                        <button class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
                        <button class="main-btn icon-btn"><i class="fa fa-exchange"></i></button>
                        @*<button class="primary-btn add-to-cart"><i class="fa fa-shopping-cart"></i> Giỏ hàng</button>*@
                        <a href="@Url.Action("ThemGioHang", "GioHang", new { @MaSP = item.MaSP , @strURL = Request.Url.ToString()} )" class="primary-btn add-to-cart"><i class="fa fa-shopping-cart"></i> Thêm</a>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- /Product Single -->

</div>