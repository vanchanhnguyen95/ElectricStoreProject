@using WebSiteDT.Models;
@model IEnumerable<SanPham>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    //Khởi tạo control WebGrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 p-b-10">
            <div class="overview-wrap">
                <h2 class="title-1">Quản lý sản phẩm</h2>
                <h3 class="au-btn au-btn-icon">
                    <i class="zmdi zmdi-plus"></i>
                    @*@Html.ActionLink("Thêm quyền", "ThemQuyen", null, new { @class = "btn btn-primary" })*@
                    @Html.ActionLink("Thêm sản phẩm", "TaoMoi", null, new { @class = "btn btn-primary" })
                </h3>
            </div>
        </div>
    </div>
</div>



@*@Html.ActionLink("Thêm sản phẩm", "TaoMoi", null, new { @class = "btn btn-success" })
<br /><br />*@
@*Thể hiện dữ liệu thông qua control webGrid*@
@grid.GetHtml(
    tableStyle: "divTable table table-borderless table-striped table-earning",
    headerStyle: "gridHead" ,
    footerStyle: "gridFooter" ,
    rowStyle: "gridRow" ,
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaSP", "Mã sản phẩm" ),
    grid.Column("TenSP", "Tên SP" ),
    grid.Column("HinhAnh", "Hình ảnh", format: p => @Html.Raw("<img width=\"150\" height=\"50\" src=\"../Content/HinhAnhSP/"+p.HinhAnh+"\">")),
    grid.Column(format: p=> @Html.ActionLink("Chỉnh sửa","ChinhSua",new {id=p.MaSP})),
    grid.Column(format: p => @Html.ActionLink("Xóa", "Xoa", new { id = p.MaSP }))
    ))


@*Css cho từng Style của table*@
<style>

    .divTable {
        width: 100%;
        border: 1px solid #999999;
    }

        .divTable td {
            border: 1px solid #999999;
        }

    .gridHead {
        background-color: Green;
    }

        .gridHead > th > a {
            color: #fff;
        }

    .gridFooter {
        font-weight: bold;
    }
